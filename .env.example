# =============================================================================
# Karaoke System Environment Variables
# =============================================================================
# Copy this file to .env and fill in your specific values

# =============================================================================
# CRITICAL CONFIGURATION (REQUIRED)
# =============================================================================

# YouTube API Key (REQUIRED for YouTube service to function)
# Get from: https://console.developers.google.com/
YOUTUBE_API_KEY=your_youtube_api_key_here

# =============================================================================
# PORT CONFIGURATION (Optional - defaults provided)
# =============================================================================

# External port mappings for services
API_SERVER_PORT=8000
YOUTUBE_SERVICE_PORT=8001
STREAMLIT_PORT=8501

# =============================================================================
# INFRASTRUCTURE CONFIGURATION (Optional - defaults provided)
# =============================================================================

# Elasticsearch Configuration
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=broker:9093

# Logging Configuration
LOG_ELASTICSEARCH_INDEX=karaoke-logs

# =============================================================================
# SERVICE URLs (Optional - defaults provided)
# =============================================================================

# Internal service communication
YOUTUBE_SERVICE_URL=http://youtube-service:8001
API_SERVER_URL=http://api-server:8000

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================

# NOTE: All services use a shared volume mounted at /app/data inside containers.
# This is automatically configured and doesn't need to be changed.

# =============================================================================
# AI MODEL CONFIGURATION (Optional - defaults provided)
# =============================================================================

# Audio Processing Configuration
DEMUCS_MODEL=htdemucs
AUDIO_SAMPLE_RATE=44100

# Transcription Configuration
WHISPER_MODEL=base
TRANSCRIPTION_LANGUAGE=auto

# =============================================================================
# CUSTOM CONFIGURATION
# =============================================================================

# Add your custom environment variables here:
# MY_CUSTOM_VAR=my_value
# ANOTHER_VAR=another_value